{
  "name": "race-management-system",
  "version": "1.0.0",
  "description": "Real-time race management system for Beachside Racetrack",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "init-db": "node server/config/database.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:css": "postcss public/css/styles.css -o public/dist/styles.css",
    "watch:css": "postcss public/css/styles.css -o public/dist/styles.css --watch",
    "clean": "rimraf public/dist",
    "validate:env": "node scripts/validateEnv.js"
  },
  "keywords": [
    "race",
    "management",
    "real-time",
    "socket.io",
    "node"
  ],
  "author": "Beachside Racetrack",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.0",
    "postcss-nested": "^6.0.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "roots": [
      "<rootDir>/server"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/config/**",
      "!server/**/*.config.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "docs/*",
      "*.test.js",
      "*.spec.js"
    ],
    "delay": "1000"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off"
    }
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-nested": {},
      "autoprefixer": {}
    }
  }
}